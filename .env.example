# .env.example
# Copy this file to .env.local and fill in your values

# ===========================================
# SOLANA NETWORK CONFIGURATION
# ===========================================

# Solana RPC endpoint
# Devnet (testing): https://api.devnet.solana.com
# Mainnet (production): https://api.mainnet-beta.solana.com
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# ===========================================
# LAZORKIT CONFIGURATION
# ===========================================

# LazorKit passkey portal URL
# This is where users authenticate with their biometrics
NEXT_PUBLIC_PORTAL_URL=https://portal.lazor.sh

# Paymaster URL for gasless transactions
# Devnet: https://kora.devnet.lazorkit.com
# This service sponsors gas fees so users don't need SOL
NEXT_PUBLIC_PAYMASTER_URL=https://kora.devnet.lazorkit.com

# ===========================================
# APP CONFIGURATION (OPTIONAL)
# ===========================================

# Your application name (shown in wallet prompts)
NEXT_PUBLIC_APP_NAME=LazorPay
